---
import Layout from '../layouts/Layout.astro'
---

<Layout
  title={"404"}
  description={"Cette page n'a pas pu être trouvée."}
	pagefindIgnore
>
  <div class="notfound-container" slot="404">
    <h1 class="text-glow">404</h1>
    <p>Cette page n'a pas pu être trouvée.</p>
    <a class="block-link" href="/">← Retour à la page d'accueil</a>
  </div>
</Layout>
<style>
  .notfound-container {
    display: flex;
    height: 80vh;
    justify-content: center;
    align-items: center;
    width: 100%;
    text-align: center;
    flex-direction: column;
  }

  .notfound-container h1 {
    font-size: 4rem;
    margin: 0;
  }

  .notfound-container p {
    font-size: 1.25em;
  }

  .block-link {
    margin-top: 1rem;
  }
</style>